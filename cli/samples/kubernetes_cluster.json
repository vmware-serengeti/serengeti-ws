{
  "nodeGroups":[
    {
      "name": "workstation",
      "roles": [
        "kubernetes_workstation"
      ],
      "instanceNum": 1,
      "cpuNum": 1,
      "memCapacityMB": 7500,
      "storage": {
        "type": "LOCAL",
        "sizeGB": 1
      },
      "haFlag": "off"
    },
    {
      "name": "master",
      "roles": [
        "kubernetes_master"
      ],
      "instanceNum": 1,
      "cpuNum": 1,
      "memCapacityMB": 7500,
      "storage": {
        "type": "SHARED",
        "sizeGB": 1
      },
      "haFlag": "on"
    },
    {
      "name": "minion",
      "roles": [
        "kubernetes_minion"
      ],
      "instanceNum": 4,
      "cpuNum": 1,
      "memCapacityMB": 7500,
      "storage": {
        "type": "LOCAL",
        "sizeGB": 1
      },
      "haFlag": "off"
    }
  ],
  "configuration": {
    "kubernetes": {
      "env": {
        "GOPATH": "/opt/kubernetes/src/go",
        "GOVC_INSECURE": "1",
        "GOVC_URL": "https://<user:password>@<IP>/sdk",
        "GOVC_DATACENTER": "<DatacenterName>",
        "GOVC_DATASTORE": "kubernetes",
        "GOVC_RESOURCE_POOL": "/<DatacenterName>/host/<ClusterName>/Resources/",
        "INSTANCE_RESOURCE_POOL": "/<DatacenterName>/vm/SERENGETI-vApp-<BDE_vApp_Name>",
        "GOVC_NETWORK": "<vlan_name>",
        "GOVC_GUEST_LOGIN": "serengeti:password",
        "KUBE_USER": "serengeti"
      }
    }
  }
}
